<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.fruct.oss.socialnavigator" >

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name="org.fruct.oss.socialnavigator.App"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="org.fruct.oss.socialnavigator.MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name="org.fruct.oss.socialnavigator.points.PointsService"
            android:enabled="true"
            android:exported="false" >
        </service>
        <service
            android:name="org.fruct.oss.socialnavigator.routing.RoutingService"
            android:enabled="true"
            android:exported="false" >
        </service>
        <service
            android:name="org.fruct.oss.socialnavigator.content.RemoteContentService"
            android:enabled="true"
            android:exported="false" >
        </service>
        <service
            android:name="org.fruct.oss.socialnavigator.DataService"
            android:enabled="true"
            android:exported="false" >
        </service>

        <activity
            android:name="org.fruct.oss.socialnavigator.settings.SettingsActivity"
            android:label="@string/title_section4"
            android:parentActivityName="org.fruct.oss.socialnavigator.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.fruct.oss.socialnavigator.MainActivity" />
        </activity>
    </application>

</manifest>
